<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/back"
        android:contentDescription="Back Button" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pengaturan Motor Servo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:textColor="@color/black" />

    <!-- Instruction -->
    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Atur kecepatan, arah, dan durasi gerakan motor servo."
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="@color/grey" />

    <!-- Speed Control -->
    <TextView
        android:id="@+id/tvSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kecepatan: Lambat"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black" />

    <SeekBar
        android:id="@+id/seekBarSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="2"
        android:layout_marginBottom="24dp" />

    <!-- Servo Direction -->
    <RadioGroup
        android:id="@+id/servoDirectionGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- RadioButton untuk 0 derajat -->
        <RadioButton
            android:id="@+id/radio0Degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Kiri" />

        <!-- RadioButton untuk 180 derajat -->
        <RadioButton
            android:id="@+id/radio180Degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kanan" />
    </RadioGroup>

    <!-- Servo Direction Text -->
    <TextView
        android:id="@+id/servoDirectionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arah Servo: 0Â°"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black" />

    <!-- Apply Settings Button -->
    <Button
        android:id="@+id/btnApplySettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terapkan Pengaturan"
        android:background="@drawable/matcha"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:paddingVertical="12dp" />

    <!-- Status Message -->
    <TextView
        android:id="@+id/tvStatusMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:gravity="start"
        android:textColor="@color/black" />

</LinearLayout>
