<!-- res/drawable/seekbar_track.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Garis Track -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/matcha" />
        </shape>
    </item>

    <!-- Indikator Lingkaran -->
    <item
        android:top="12dp"
        android:bottom="12dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/matcha" />
        </shape>
    </item>
</layer-list>
